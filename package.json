{
  "name": "vegaPOS",
  "version": "0.0.9",
  "description": "A minimal desktop POS application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "https://github.com/Accelerate-net/vegaPOS",
  "keywords": [
    "POS",
    "Restaurant"
  ],
  "author": "Accelerate",
  "license": "CC0-1.0",
  "build": {
    "appId": "yourappid",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^20.2.0"
  },
  "dependencies": {
    "electron-settings": "^3.1.4",
    "jquery": "^3.3.1",
    "leveldown": "^3.0.0",
    "mkdirp": "^0.5.1",
    "shelljs": "^0.8.1"
  }
}
